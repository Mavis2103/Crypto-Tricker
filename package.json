{
  "name": "crypto-price-ticker",
  "displayName": "crypto-price-ticker",
  "description": "Keep an eye on cryptocurrency prices as you code!",
  "keywords": [
    "bitcoin",
    "ethereum",
    "litecoin"
  ],
  "version": "1.0.0",
  "publisher": "Mavis2103",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mavis2103/Crypto-Tricker"
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "contributes": {
    "configuration": {
      "properties": {
        "crypto-price-ticker.apiKey": {
          "type": "string",
          "description": "Your CryptoCompare API key."
        },
        "crypto-price-ticker.interval": {
          "type": "number",
          "default": 60,
          "description": "The refresh interval in seconds."
        },
        "crypto-price-ticker.onlyRefreshWhenFocused": {
          "type": "boolean",
          "default": false,
          "description": "Disable refreshing when the vscode window does not have focus."
        },
        "crypto-price-ticker.period": {
          "type": "string",
          "default": "24HOUR",
          "enum": [
            "HOUR",
            "24HOUR",
            "DAY"
          ],
          "description": "The opening period."
        },
        "crypto-price-ticker.higherColor": {
          "type": "string",
          "default": "lightgreen",
          "description": "The color that indicates the symbols is trading higher."
        },
        "lowerColor": {
          "type": "string",
          "default": "coral",
          "description": "The color that indicates the symbols is trading lower."
        },
        "crypto-price-ticker.tickers": {
          "type": "object",
          "default": {
            "symbols": [
              "BTC",
              "ETH"
            ],
            "currency": "USD"
          },
          "description": "The object of ticker definitions to display in the status bar."
        }
      }
    }
  },
  "scripts": {
    "build": "vsce package",
    "publish": "vsce publish",
    "vscode:prepublish": "bun run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "typescript": "^4.5.5",
    "eslint": "^8.9.0"
  },
  "dependencies": {
    "got": "^11.8.3",
    "vsce": "^2.15.0"
  }
}
